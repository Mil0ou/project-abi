<html lang="fr">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Login</title>
		<script src="https://kit.fontawesome.com/4933de071d.js" crossorigin="anonymous"></script>
		<script src="js/scriptmodal.js" defer></script>
		<link rel="stylesheet" href="/css/stylelogin.css" />
	</head>
	<body>
		<div class="form-pos">
			<form class="formulaire-connect" action="{{ path('security_login') }}" method="post">
				<h1>Connexion</h1>
				<table>
					<tbody>
						<tr>
							<td><label for="username">Username :</label></td>
							<td><input type="text" name="_username" id="username" /></td>
						</tr>

						<tr>
							<td><label for="mdp">Mot de Passe : </label></td>
							<td><input type="password" name="_password" id="mdp" /></td>
						</tr>

						<tr class="btnform">
							<td><button type="submit">Connexion</button></td>
							<td><button type="reset">Annuler</button></td>
						</tr>
					</tbody>
				</table>
			</form>
		</div>
	</body>
</html>
